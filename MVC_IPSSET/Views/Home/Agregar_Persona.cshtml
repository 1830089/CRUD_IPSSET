@{
    ViewData["Title"] = "Agregar Persona";
}

<style>
    .contenedor{
        width:100%;
        height:600px;
        display:grid;
        grid-template-columns: repeat(3,1fr);
        grid-template-rows: repeat(5,1fr);
        row-gap:1rem;
        column-gap:1rem;
    }

    .campo{
        padding:10px;
    }
</style>

<h1 style="color:#ab0033">Agregar Persona</h1>

<form class="contenedor" style="border: 2px solid #ab0033; border-radius:5px;">
    <div class="campo">
        <label class="control-label text-black" for="noActivo">N° Activo</label>
        <input class="form-control" type="text" id="noActivo" name="noActivo" />

    </div>

    <div class="campo">
        <label class="control-label text-black" for="indebido">Cobro Indebido</label>

        <div class="form-check">
            <input class="form-check-input" type="radio" name="Rconvenio" id="Rconvenio">
            <label class="form-check-label" for="Rconvenio">
                Convenio
            </label>
        </div>

    </div>

    <div class="campo">
        

    </div>

    <div class="campo">
        <label class="control-label text-black" for="noAfiliado">N° Afiliado</label>
        <input class="form-control" type="text" id="noAfiliado" name="noAfiliado" />

    </div>

    <div class="campo">
        <label class="control-label text-black" for="noPension">N° Pension</label>
        <input class="form-control" type="text" id="noPension" name="noPension" />

    </div>

    <div class="campo">
        <label class="form-text text-black">Sexo</label>

        <div class="form-check">
           <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
            <label class="form-check-label" for="flexRadioDefault1">
           Masculino
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
            <label class="form-check-label" for="flexRadioDefault2">
            Femenino
            </label>
        </div>
    </div>

    <div class="campo">
        <label class="control-label text-black" for="aPaterno">A Paterno</label>
        <input class="form-control" type="text" id="aPaterno" name="aPaterno" />

    </div>

    <div class="campo">
        <label class="control-label text-black" for="aMaterno">A Materno</label>
        <input class="form-control" type="text" id="aMaterno" name="aMaterno" />

    </div>

    <div class="campo">
        <label class="control-label text-black" for="Nombre">Nombre</label>
        <input class="form-control" type="text" id="Nombre" name="Nombre" />

    </div>

    <div class="campo">
        <label class="control-label text-black" for="Nacimiento">Fecha Nacimiento</label>
        <input class="form-control" type="date" id="Nacimiento" name="Nacimiento" />

    </div>

    <div class="campo">
        <label class="control-label text-black" for="RFC">RFC</label>
        <input class="form-control" type="text" id="RFC" name="RFC" />

    </div>

    <div class="campo">
        <label class="control-label text-black" for="CURP">CURP</label>
        <input class="form-control" type="text" id="CURP" name="CURP" />

    </div>

    <div class="campo">
        <label class="control-label text-black" for="Ecivil">ESTADO CIVIL</label>
        <select class="form-control" aria-label="Default select example">
            <option selected>default</option>
            <option value="1">casado</option>
            <option value="2">soltero</option>
            <option value="3">divorciado</option>
        </select>

    </div>

    <div class="campo">
        <label class="form-text text-black" for="Tpension">TIPO PENSIÓN</label>
        <select class="form-select" aria-label="Default select example">
            <option selected>Open this select menu</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
        </select>

    </div>

    <div class="campo">
        <a class="btn btn-outline-success btn-lg"><i class="fa-solid fa-floppy-disk"></i> <span>&nbsp;Guardar</span></a>

    </div>
</form>